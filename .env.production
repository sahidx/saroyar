# Production Environment Configuration for CoachManager
# Copy this file to .env and fill in your actual values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL="postgresql://coachmanager:YOUR_SECURE_PASSWORD@localhost:5432/coachmanager_prod"

# ==========================================
# SERVER CONFIGURATION
# ==========================================
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
# Generate a secure random string (64+ characters)
SESSION_SECRET="CHANGE_THIS_TO_A_VERY_LONG_SECURE_RANDOM_STRING_FOR_SESSION_ENCRYPTION"

# Allowed origins for CORS (your domain)
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ==========================================
# SMS CONFIGURATION
# ==========================================
# Replace with your SMS provider details
SMS_API_KEY="your_sms_provider_api_key"
SMS_API_URL="https://api.yoursms.com/send"
SMS_SENDER_ID="CoachManager"

# SMS Rate limiting (per minute)
SMS_RATE_LIMIT=10

# ==========================================
# FILE UPLOAD CONFIGURATION
# ==========================================
UPLOAD_DIR="/opt/coachmanager/uploads"
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf,text/csv"

# ==========================================
# AI SERVICES (OPTIONAL)
# ==========================================
# OpenAI API (for advanced features)
OPENAI_API_KEY="sk-your_openai_api_key"

# Anthropic API (Claude)
ANTHROPIC_API_KEY="sk-ant-your_anthropic_key"

# Google Gemini API
GEMINI_API_KEY="your_gemini_api_key"

# ==========================================
# EMAIL CONFIGURATION (OPTIONAL)
# ==========================================
# SMTP Configuration for sending emails
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_password"

# Email sender information
FROM_EMAIL="noreply@yourdomain.com"
FROM_NAME="CoachManager System"

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
LOG_LEVEL="info"
LOG_FILE="/opt/coachmanager/logs/app.log"
ERROR_LOG_FILE="/opt/coachmanager/logs/error.log"

# ==========================================
# BACKUP CONFIGURATION
# ==========================================
# Database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_DIR="/opt/coachmanager/backups"

# ==========================================
# MONITORING CONFIGURATION
# ==========================================
# Health check endpoint
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH="/health"

# Performance monitoring
PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=5000

# ==========================================
# CACHE CONFIGURATION
# ==========================================
# Redis (if you want to add caching later)
REDIS_URL="redis://localhost:6379"
CACHE_TTL=300

# ==========================================
# ADMIN CONFIGURATION
# ==========================================
# Default admin user (will be created on first run)
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="CHANGE_THIS_SECURE_PASSWORD"
ADMIN_NAME="System Administrator"

# ==========================================
# FEATURE FLAGS
# ==========================================
# Enable/disable features in production
ENABLE_REGISTRATION=false
ENABLE_BULK_SMS=true
ENABLE_AI_FEATURES=true
ENABLE_FILE_UPLOAD=true
ENABLE_EMAIL_NOTIFICATIONS=true

# ==========================================
# DATABASE POOL CONFIGURATION
# ==========================================
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=10000
DB_POOL_ACQUIRE_TIMEOUT=60000

# ==========================================
# SECURITY HEADERS
# ==========================================
# Content Security Policy
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:;"

# ==========================================
# SSL/TLS CONFIGURATION
# ==========================================
# Force HTTPS in production
FORCE_HTTPS=true
SSL_REDIRECT=true

# ==========================================
# TIMEZONE CONFIGURATION
# ==========================================
TZ="Asia/Dhaka"
DEFAULT_TIMEZONE="Asia/Dhaka"

# ==========================================
# NOTIFICATION SETTINGS
# ==========================================
# WhatsApp integration (if available)
WHATSAPP_TOKEN="your_whatsapp_business_token"
WHATSAPP_PHONE_NUMBER_ID="your_phone_number_id"

# Push notification settings
PUSH_NOTIFICATION_KEY="your_firebase_server_key"

# ==========================================
# DEVELOPMENT/DEBUG (SET TO FALSE IN PRODUCTION)
# ==========================================
DEBUG=false
ENABLE_CORS_ALL=false
LOG_SQL_QUERIES=false