# Modern CoachManager System - Production Environment

# Application Settings
NODE_ENV=production
PORT=3001

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://coachmanager:your_secure_password@localhost:5432/coachmanager_prod

# Security Keys (Generate new ones for production)
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
SESSION_SECRET=your_session_secret_here_minimum_32_characters

# AI API Configuration
# Anthropic Claude API (for advanced question generation)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI/Gemini API (alternative AI provider)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# SMS Configuration (for messaging features)
SMS_API_ENDPOINT=https://api.sms-provider.com/send
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Frontend Configuration
CLIENT_URL=https://your-domain.com
CORS_ORIGIN=https://your-domain.com

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=/var/www/coachmanager/uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=strict

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/www/coachmanager/logs/app.log

# Modern Features Configuration
ENABLE_THREE_STATE_ATTENDANCE=true
ENABLE_CLASS_BASED_SUBJECTS=true
ENABLE_AUTOMATED_RESULTS=true
ENABLE_AI_QUESTIONS=true
ENABLE_REAL_TIME_MESSAGING=true

# Theme Configuration
THEME_PRIMARY_COLOR=purple
THEME_MODE=modern

# Backup Configuration
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/home/ubuntu/backups

# Performance Configuration
NODE_OPTIONS="--max-old-space-size=4096"
CLUSTER_WORKERS=0  # 0 = auto detect CPU cores

# Security Headers
SECURITY_HEADERS_ENABLED=true
RATE_LIMITING_ENABLED=true
CSRF_PROTECTION_ENABLED=true

# Development/Debug (set to false in production)
DEBUG_MODE=false
VERBOSE_LOGGING=false